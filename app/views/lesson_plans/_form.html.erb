<%= form_for @lesson_plan do |f| %>

<div class="field<%= ' field_with_errors' if @lesson_plan.errors[:name].any? %>">
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %> <br>
</div>

<div class="field<%= ' field_with_errors' if @lesson_plan.errors[:topic].any? %>">
  <%= f.label :topic, "Topic: " %>
  <%= f.text_field :topic %> <br>
</div>


<div class="field<%= ' field_with_errors' if @lesson_plan.errors[:duration].any? %>">
  <%= f.label :duration, "Duration (in days): " %>
  <%= f.number_field :duration %> <br>
</div >

  <%= f.label "Books: " %> <br>
    <% if current_user.books.empty? %>
      <p> There are no books in your library. Add some and edit your lesson plan later. </p>
    <% else %>
      <%= f.collection_check_boxes :book_ids, current_user.books.all, :id, :title %> <br>
    <% end %>


  <%= f.submit %>
<% end %>
<%= form_for @lesson_plan do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %> <br>

  <%= f.label "Subject(s): " %> <br>
  <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %> <br>
    <%= f.fields_for :subjects, lesson_plan.subjects.build do |subjects_fields| %>
    <%= subjects_fields.text_field :name %>
  <% end %>

  <%= f.label :duration, "Duration (in days): " %>
  <%= f.number_field :duration %> <br>

  <%= f.label :books %>
  <%= f.collection_check_boxes :book_ids, current_user.books.all, :id, :title %> <br>

  <%= f.submit %>
<% end %>
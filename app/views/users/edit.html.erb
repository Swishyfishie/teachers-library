<h1>Edit Your Profile: </h1>

<%= form_for @user do |f| %>

  <p>Your Information: </p>

  <%= f.label "Email: " %>
  <%= f.email_field :email %> <br>

  <%= f.label "Your Name: " %>
  <%= f.text_field :name %> <br>

  <%= f.label "Your School: " %>
  <%= f.text_field :school %> <br>

  <%= f.label "Grade Teaching: " %>
  <%= f.text_field :grade %> <br>


  <%= f.submit "Submit Changes", class: "btn"%>

<% end %>

<p> <%= link_to "Delete Account", user_path(@user), method: 'delete' %> </p>
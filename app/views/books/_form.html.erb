<%= form_for @book do |f| %>
<%= f.hidden_field :user_id %>
  
  <%= f.label :title %>
  <%= f.text_field :title %> <br>

  <%= f.label :author %>
  <%= f.text_field :author %> <br>

  <%= f.fields_for :lesson_books do |flb| %>
    <%= flb.text_field :subject %>
  <% end %>

  <%= f.submit class: "btn" %>
<% end %>
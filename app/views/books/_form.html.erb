<%= form_for @book do |f| %>
<%= f.hidden_field :user_id %>
  
  <%= f.label :title %>
  <%= f.text_field :title %> <br>

  <%= f.label :author %>
  <%= f.text_field :author %> <br>
  <%= f.label "Subject(s): " %> <br>
  <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %> <br>
    <%= f.fields_for :subjects, @book.subjects.build do |subjects_fields| %>
    <%= subjects_fields.text_field :name %> <br>
  <% end %>


  <%= f.submit class: "btn" %>
<% end %>

